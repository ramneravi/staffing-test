<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use App\Repositories\RotaSlots;
use Yajra\Datatables\Datatables;

class RotaSlotStaffController extends Controller
{


    /**
     * @param RotaSlots $rotaSlots
     * @return \Illuminate\Contracts\View\Factory|\Illuminate\View\View
     */
    public function index(RotaSlots $rotaSlots){

        $rotaSlotsByStaffId = $rotaSlots->findAllByStaffIdAndShift();

        $totalHoursByDay = $rotaSlots->calculateTotalWorkHrsByDay();
        $totalNonOverlapHoursByDay = $rotaSlots->calculateTotalNonOverlapWorkHrsByDay();

        $rotaSlots = compact("rotaSlotsByStaffId", "totalHoursByDay", "totalNonOverlapHoursByDay");



        return view('shop.staff-rota-shift', $rotaSlots);
    }


    /**
     * Displays datatables front end view
     *
     * @return \Illuminate\View\View
     */
    public function getIndex()
    {
        return view('datatables.index');
    }

    /**
     * Process datatables ajax request.
     *
     * @return \Illuminate\Http\JsonResponse
     */
    public function anyData()
    {
        return Datatables::of(RotaSlotStaff::query())->make(true);
    }

}
